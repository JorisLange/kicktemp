<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	
	<name>kicktemp</name>
	<creationDate>12.01.2015</creationDate>
	<author>Niels Nübel</author>
	<copyright>Copyright © 2015 nn-medienagentur.de</copyright>
	<authorEmail>info@nn-medienagentur.de</authorEmail>
	<authorUrl>http://www.nn-medienagentur.de</authorUrl>
	<version>1.0.0</version>
	<description><![CDATA[ 
		<h1>KICKTEMP</h1>
		<p><img src="../templates/kicktemp/template_preview.png" /></p>
		<h2>Module positions</h2>
		<ol>
            <li>logo</li>
            <li>menu</li>
            <li>search</li>
            <li>top</li>
            <li>inner-top</li>
            <li>sidebar-a</li>
            <li>sidebar-b</li>
            <li>inner-bottom</li>
            <li>bottom</li>
            <li>footer</li>
            <li>debug</li>
		</ol>
		<p>Created by <a href="http://www.nn-medienagentur.de" target="_blank">NN-Medienagentur | nn-medienagentur.de</a>.</p>
	]]></description>
	
	<files><!-- no need to change -->
		<folder>assets</folder>
		<folder>bower_components</folder>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>node_modules</folder>
		<filename>.bowerrc</filename>
		<filename>.gitignore</filename>
		<filename>bower.json</filename>
		<filename>CHANGELOG.MD</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>index_multipage.php</filename>
		<filename>index_onepage.php</filename>
		<filename>offline.php</filename>
		<filename>package.json</filename>
		<filename>README.md</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<positions><!-- define the positions for modules here -->
        <position>logo</position>
        <position>menu</position>
        <position>search</position>
        <position>top</position>
        <position>inner-top</position>
        <position>sidebar-a</position>
        <position>sidebar-b</position>
        <position>inner-bottom</position>
        <position>bottom</position>
        <position>footer</position>
        <position>debug</position>
	</positions>

	<config><!-- no need to change -->
		<fields name="params">

			<fieldset name="advanced">

                <!-- SHOWSYSTEMOUTPUT -->
                <field  name="showsystemoutput"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_SHOWSYSTEMOUTPUT_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SHOWSYSTEMOUTPUT_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- SHOWONFRONTPAGE -->
                <field  name="hidecontentwrapper"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_HIDECONTENTWRAPPER_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_HIDECONTENTWRAPPER_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- PAGETYPE -->
                <field  name="pagetype"
                        type="radio"
                        class="btn-group"
                        default="multipage"
                        label="TPL_KICKTEMP_PARAMETER_PAGETYPE_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_PAGETYPE_DESC"
                        >
                    <option value="onepage">TPL_KICKTEMP_PARAMETER_ONEPAGE</option>
                    <option value="multipage">TPL_KICKTEMP_PARAMETER_MULTIPAGE</option>
                </field>

                <!-- Holder.js-->
                <field  name="holder"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_HOLDER_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_HOLDER_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
			</fieldset>

            <fieldset name="boostrap">
                <!-- SIDEBAR A -->
                <field  name="sidebar-a"
                        class=""
                        type="text"
                        default="col-md-4"
                        label="TPL_KICKTEMP_PARAMETER_SIDEBAR_A_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SIDEBAR_A_DESC"
                        />

                <!-- SIDEBAR B -->
                <field  name="sidebar-b"
                        class=""
                        type="text"
                        default="col-md-4"
                        label="TPL_KICKTEMP_PARAMETER_SIDEBAR_B_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_SIDEBAR_B_DESC"
                        />

                <!-- CONTENT 1 -->
                <field  name="content-1-col"
                        class=""
                        type="text"
                        default="col-md-12"
                        label="TPL_KICKTEMP_PARAMETER_CONTENT_1_COL_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_CONTENT_1_COL_DESC"
                        />

                <!-- CONTENT 2 -->
                <field  name="content-2-col"
                        class=""
                        type="text"
                        default="col-md-8"
                        label="TPL_KICKTEMP_PARAMETER_CONTENT_2_COL_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_CONTENT_2_COL_DESC"
                        />

                <!-- CONTENT 3 -->
                <field  name="content-3-col"
                        class=""
                        type="text"
                        default="col-md-4"
                        label="TPL_KICKTEMP_PARAMETER_CONTENT_3_COL_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_CONTENT_3_COL_DESC"
                        />
            </fieldset>

            <fieldset name="analytics">
                <!-- GOOGLE ANALYTICS -->
                <field  name="googleanalytics"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- GOOGLE ANALYTICS CODE-->
                <field  name="googleanalyticscode"
                        class=""
                        type="text"
                        default=""
                        label="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_CODE_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLEANALYTICS_CODE_DESC"
                        />
            </fieldset>

            <fieldset name="webfonts">
                <!-- GOOGLE FONT-->
                <field  name="googlefont"
                        class=""
                        type="text"
                        default=""
                        label="TPL_KICKTEMP_PARAMETER_GOOGLEFONT_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_GOOGLEFONT_DESC"
                        />
            </fieldset>

            <fieldset name="disable">
                <!-- Disable JavaScript -->
                <field  name="disablejs"
                        type="radio"
                        class="btn-group"
                        default="1"
                        label="TPL_KICKTEMP_PARAMETER_DISABLEJS_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_DISABLEJS_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- JavaScript Files -->
                <field  name="fnjs"
                        type="textarea"
                        label="TPL_KICKTEMP_PARAMETER_FNJS_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_FNJS_LABEL"
                        cols="30"
                        default="mootools-core.js,caption.js,media/jui/js/bootstrap.min.js"
                        rows="4"
                        />

                <!-- Disable CSS -->
                <field  name="disablecss"
                        type="radio"
                        class="btn-group"
                        default="0"
                        label="TPL_KICKTEMP_PARAMETER_DISABLECSS_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_DISABLECSS_DESC"
                        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <!-- CSS Files -->
                <field  name="fncss"
                        type="textarea"
                        label="TPL_KICKTEMP_PARAMETER_FNCSS_LABEL"
                        description="TPL_KICKTEMP_PARAMETER_FNCSS_DESC"
                        cols="30"
                        rows="4"
                        />
            </fieldset>
		</fields>
	</config>
	
</extension>
